TreeNode* buildTree(vector<int>& preorder, vector<int>& inorder) {
    return dfs(preorder, 0, preorder.size() - 1, inorder, 0, inorder.size() - 1);
}

TreeNode* dfs(const vector<int>& preorder, int pl, int pr, const vector<int>& inorder, int il, int ir) {
    if (pl > pr) {
        return nullptr;
    }
    int rval = preorder[pl];
    int left_size = 0;
    int rpos = il;
    for (; rpos < ir; ++ rpos, ++ left_size) {
        if (inorder[rpos] == rval) {
            break;
        }
    }
    TreeNode* root = new TreeNode(rval);
    root->left = dfs(preorder, pl + 1,  pl + left_size, inorder, il, rpos - 1);
    root->right = dfs(preorder, pl + left_size + 1, pr, inorder, rpos + 1, ir);
    return root;
}
