int maxProfit(vector<int>& prices) {
    int max_profit = 0;
    int price_min = INT_MAX;
    for (int i = 0; i < prices.size(); ++i) {
        if (price_min > prices[i])
            price_min = prices[i];
        if (max_profit < prices[i] - price_min)
            max_profit = prices[i] - price_min;
    }

    return max_profit;
}
