ListNode *getIntersectionNode(ListNode *headA, ListNode *headB) {
    int la = getLength(headA);
    int lb = getLength(headB);
    if (la > lb) {
        for (int i = 0; i < la - lb; ++ i, headA = headA->next);
    } else {
        for (int i = 0; i < lb - la; ++ i, headB = headB->next);
    }
    for (; headA != nullptr && headB != nullptr && headA != headB; headA = headA->next, headB = headB->next);
    return headA;
}

int getLength(ListNode* head) {
    int length = 0;
    for (; head != nullptr; head = head->next, ++ length);
    return length;
}
