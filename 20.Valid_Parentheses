bool isValid(string s) 
{
    stack<char> st;

    for (int i = 0; i < (int)s.size(); i++)
    {
        switch (s[i])
        {
        case '(':
        case '[':
        case '{':
            st.push(s[i]);
            break;
        case ')':
            if (st.empty() || st.top() != '(')
                return false;
            st.pop();
            break;
        case ']':
            if (st.empty() || st.top() != '[')
                return false;
            st.pop();
            break; 
        case '}':
            if (st.empty() || st.top() != '{')
                return false;
            st.pop();
            break;
        default:
                return false;
        }
    }

    return st.empty();
}
