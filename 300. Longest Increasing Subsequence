int lengthOfLIS(vector<int>& nums)  {
    // BIS[k]表示num[0,k-1]中递增子序列最后一个元素最小的那个序列
    // BIS_tails表示BIS的最后一个元素
    vector<int> BIS_tails(nums.size() + 1, INT_MAX);

    for (int i = 0; i < nums.size(); ++ i) {
        for (int k = 0; k < i; ++ k) {
            if (nums[i] > BIS_tails[k] && nums[i] < BIS_tails[k + 1]) {
                BIS_tails[k + 1] = nums[i];
            }
        }
        if (BIS_tails[0] > nums[i]) {
            BIS_tails[0] = nums[i];
        }
    }

    int len = 0;
    for (auto tail : BIS_tails) {
        if (tail == INT_MAX) {
            break;
        }
        ++ len;
    }
    return len;
}
