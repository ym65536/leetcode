// if h[i] < h[j], then area (h[i] -> h[i, j - 1]) must smaller than h[i, j] 
int maxArea(vector<int>& height) {
    int result = 0;
    int left = 0;
    int right = height.size() - 1;
    while (left < right) {
        result = max(result, (right - left) * min(height[left], height[right]));
        if (height[left] < height[right]) {
            ++ left;
        } else {
            -- right;
        }
    }
    return result;
}
